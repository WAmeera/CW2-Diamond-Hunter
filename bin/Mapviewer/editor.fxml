<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Mapviewer.Control">
   <bottom>
      <HBox alignment="CENTER" prefHeight="124.0" prefWidth="737.0" style="-fx-background-color: orange;">
         <children>
            <Pane prefHeight="93.0" prefWidth="160.0" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
               <children>
                  <TextArea fx:id="yPosition" layoutX="92.0" layoutY="-12.0" prefHeight="38.0" prefWidth="65.0" />
                  <Button layoutX="90.0" layoutY="45.0" mnemonicParsing="false" onAction="#saveClose" prefHeight="35.0" prefWidth="107.0" text="Save" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="TWO_PASS_BOX" spread="0.32" />
                     </effect>
                  </Button>
                  <TextArea layoutX="4.0" layoutY="-12.0" prefHeight="38.0" prefWidth="65.0" fx:id="xPosition" />
                  <Button layoutX="-37.0" layoutY="45.0" mnemonicParsing="false" onAction="#startGame" prefHeight="35.0" prefWidth="107.0" text="StartGame" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <effect>
                        <DropShadow spread="0.32" />
                     </effect>
                  </Button>
               </children>
            </Pane>
         </children>
      </HBox>
   </bottom>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#axePressed" prefHeight="40.0" prefWidth="140.0" text="Axe" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#boatPressed" prefHeight="40.0" prefWidth="140.0" text="Boat" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="50.0" mnemonicParsing="false" onAction="#closeProgram" prefHeight="40.0" prefWidth="140.0" text="Close" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </right>
   <center>
      <Canvas id="exit" fx:id="canvas" height="639.0" width="637.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
