<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Mapviewer.Control">
   <bottom>
      <HBox alignment="CENTER" prefHeight="127.0" prefWidth="729.0" style="-fx-background-color: orange;">
         <children>
            <Pane prefHeight="93.0" prefWidth="160.0" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets top="30.0" />
               </HBox.margin>
               <children>
                  <TextArea fx:id="yPosition" layoutX="92.0" layoutY="-12.0" prefHeight="38.0" prefWidth="65.0" />
                  <Button fx:id="playButton" layoutX="-12.0" layoutY="38.0" mnemonicParsing="false" onAction="#saveClose" prefHeight="35.0" prefWidth="185.0" text="Save &amp; Play!" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <effect>
                        <DropShadow blurType="TWO_PASS_BOX" spread="0.32" />
                     </effect>
                  </Button>
                  <TextArea layoutX="4.0" layoutY="-12.0" prefHeight="38.0" prefWidth="65.0" fx:id="xPosition" />
               </children>
            </Pane>
         </children>
      </HBox>
   </bottom>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#axePressed" prefHeight="40.0" prefWidth="140.0" text="Axe" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#boatPressed" prefHeight="40.0" prefWidth="140.0" text="Boat" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="50.0" mnemonicParsing="false" onAction="#closeProgram" prefHeight="40.0" prefWidth="140.0" text="Close" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
            </Button>
            <ButtonBar prefHeight="59.0" prefWidth="110.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#resetPosition" prefHeight="40.0" prefWidth="104.0" text="Reset">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Button>
              </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </right>
   <center>
      <Canvas id="exit" fx:id="canvas" height="557.0" width="501.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
